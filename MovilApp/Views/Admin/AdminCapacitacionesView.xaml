<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MovilApp.ViewModels.Admin"
             x:Class="MovilApp.Views.Admin.AdminCapacitacionesView">
    <ContentPage.BindingContext>
        <viewModels:AdminCapacitacionesViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *, Auto, Auto, Auto">
        <HorizontalStackLayout Grid.Row="0">
            <Label Text="Buscar:"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Margin="0,10,0,10"
               Grid.Row="0"/>
            <Entry Placeholder="Buscar capacitaciones..."
           Text="{Binding FilterText}"
           HorizontalOptions="Center"
           VerticalOptions="Center"
           Margin="0,10,0,10"
           />
        </HorizontalStackLayout>

        <ScrollView Grid.Row="1">
            <ListView 
            ItemsSource="{Binding Capacitaciones}"
            SelectedItem="{Binding CapacitacionCurrent}"
            SelectionMode="Single"
            IsPullToRefreshEnabled="True"
            RefreshCommand="{Binding RefreshCommand}"
            Margin="20,15,20,0"
            IsRefreshing="{Binding IsRefreshing}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nombre}"
                              Detail="{Binding Ponente}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
        <Button Text="Agregar"
            Command="{Binding AddCommand}"
            VerticalOptions="Center"
            Margin="20,15,20,0"
            Grid.Row="2"/>
        <Button Text="Editar"
            Command="{Binding EditCommand}"
            VerticalOptions="Center"
            Margin="20,15,20,0"
            Grid.Row="3"/>
        <Button Text="Eliminar"
            Command="{Binding DeleteCommand}"
            VerticalOptions="Center"
            Margin="20,15,20,0"
            Grid.Row="4"/>
    </Grid>
</ContentPage>